<window name = "start_menu_buttons">
    <object name = "show_anim" type = "object_anim" effect = "objects\screens\main_menu\gui_effects\show_elems" x = "400" y = "200" time_scale = "0.3" />
    <object name = "hide_anim" type = "object_anim" effect = "objects\screens\main_menu\gui_effects\show_elems" x = "400" y = "200" forward_anim = "0" time_scale = "0.3"/>

    <object name = "Buttons" type = "objects">
        <object name = "title" 				type = "text" string = "screens_titles_mainmenu" style = "button_mm_title" x = "0" y = "-80"/>
        <object name = "line" 				type = "sprite" sprite_name = "line" tex_name = "objects\screens\main_menu\gui_effects\mainmenu_tex_st" x = "-285" y = "-20"/>

        <object name = "welcome_text" 	type = "text" string = "screens_profile_welcome1" style = "button_mm_welcome" x = "-270" y = "440"/>
        <object name = "welcome_name" 	type = "text" string = "profile_name" style = "button_mm_welcome" x = "390" y = "440"/>
        <object name = "profile_button" type = "button_entity" prototype = "objects\screens\main_menu\gui_elements\button_profile" x = "350" y = "480" >
            <spawn name = "OnButtonClick">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_press" instant = "1"/>	
                <do object = "global" command = "PlaySoundSample" param = "gui_menu_leveldown" instant = "1"/>	
                <do object = "global.screens.main_menu_screen" command = "BehaviorStart" param = "MainMenuProfile 2" />
            </spawn>
            <spawn name = "OnButtonSelected">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_select" instant = "1"/>	
            </spawn>
        </object>
        

        <object name = "play_game_button" 		type = "button_entity" prototype = "objects\screens\main_menu\gui_elements\button_play_game" x = "0" y = "0" >
            <spawn name = "OnButtonClick">
                <do object = "global" command = "PlaySoundSample" param = "gui_menu_leveldown" instant = "1"/>	
                <do object = "global" command = "PlaySoundSample" param = "gui_menu_playgame" instant = "1"/>	
                <do object = "global" command = "BehaviorStart" param = "City 2" />
            </spawn>
            <spawn name = "OnButtonSelected">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_select" instant = "1"/>	
            </spawn>
        </object>
        
        <object name = "options_button" 			type = "button_entity" prototype = "objects\screens\main_menu\gui_elements\button_options" x = "0" y = "50" >
            <spawn name = "OnButtonClick">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_press" instant = "1"/>	
                <do object = "global" command = "PlaySoundSample" param = "gui_menu_leveldown" instant = "1"/>	
                <do object = "global.screens.main_menu_screen" command = "BehaviorStart" param = "MainMenuOptions 2" />
            </spawn>
            <spawn name = "OnButtonSelected">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_select" instant = "1"/>	
            </spawn>
        </object>
            
        <object name = "quit_button" 				type = "button_entity" prototype = "objects\screens\main_menu\gui_elements\button_quit" x = "0" y = "200" >
            <spawn name = "OnButtonClick">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_press" instant = "1"/>	
                <do object = "global" command = "PlaySoundSample" param = "gui_menu_quit" instant = "1"/>	
                <do object = "global" command = "Exit"/>
            </spawn>
            <spawn name = "OnButtonSelected">
                <do object = "global" command = "PlaySoundSample" param = "gui_button_select" instant = "1"/>	
            </spawn>
        </object>
    </object>
</window>