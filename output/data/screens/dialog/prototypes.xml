<prototypes>
    <prototype name="Dialog">
        <widget name="Window" x="0" y="0" width="100%" height="100%" visible="false">
            <prototype name="Window" />
            <animation name="Show" length="0.135"
                x="0:50%-8,100%:0"
                y="0:50%-8,100%:0"
                width="0:16,100%:100%"
                height="0:16,100%:100%"
            />
            <animation name="Hide" length="0.135"
                x="0:0,100%:50%-8"
                y="0:0,100%:50%-8"
                width="0:100%,100%:16"
                height="0:100%,100%:16"
            />
        </widget>
        <text_area name="TextArea" x="3" y="3" width="100%-6" height="100%-6" font="FFVIIFont" text_align="left" padding="3 5 3 5" scissor_area="0 0 100% 100%" visible="false">
            <animation name="Show" length="0"
                scissor_area="0:0 0 100% 100%"
            />
            <animation name="Hide" length="0.135"
                scissor_area="0:0 0 100% 100%,100%:50%-5 50%-5 50%+5 50%+5"
            />
        </text_area>
        <sprite name="Cursor" image="screens/images/cursor.png" x="15" y="6" width="24" height="16" visible="false" />
    </prototype>
</prototypes>
